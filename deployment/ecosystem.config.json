{
  "name": "task-manager-backend",
  "script": "src/server.js",
  "instances": 1,
  "exec_mode": "cluster",
  "env": {
    "NODE_ENV": "production",
    "PORT": 5000
  },
  "error_file": "/var/log/pm2/task-manager-error.log",
  "out_file": "/var/log/pm2/task-manager-out.log",
  "log_file": "/var/log/pm2/task-manager-combined.log",
  "time": true,
  "restart_delay": 4000,
  "max_restarts": 10,
  "min_uptime": "10s"
}